<ContentPage
    x:Class="MauiApp1.AddPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20" VerticalOptions="Center">

            <Label Text="Add"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" 
                   TextColor="#132898"/>

           
                <HorizontalStackLayout HorizontalOptions="Center">
                <ImageButton Source="x250btn.png" x:Name="x250" Clicked="x250_Clicked" Background="Transparent"></ImageButton>


                <ImageButton Source="x500btn.png" x:Name="x500" Clicked="x500_Clicked" Background="Transparent"></ImageButton>
                </HorizontalStackLayout>


            <HorizontalStackLayout HorizontalOptions="Center">
                <ImageButton Source="x180btn.png" x:Name="x180" Clicked="x180_Clicked" Background="Transparent"></ImageButton>


                <ImageButton Source="custombtn.png" x:Name="custom" Clicked="custom_Clicked" Background="Transparent"></ImageButton>
                </HorizontalStackLayout>

            <ImageButton Source="okbtn.png" x:Name="ok" Clicked="ok_Clicked" Background="Transparent"></ImageButton>
            


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
